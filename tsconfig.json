{
    "compilerOptions": {
        "target": "es5",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "baseUrl": ".",
        "paths": {
            "@/Api": ["utils/wrappers/Api"],
            "@/app/*": ["features/app/*"],
            "@/features/*": ["features/*"],
            "@/files/*": ["features/files/*"],
            "@/pages/*": ["pages/*"],
            "@/users/*": ["features/users/*"],
            "@/utils/*": ["utils/*"]
        }
    },
    "include": [
        "next-env.d.ts", "features/**/*.ts", "features/**/*.tsx", "pages/**/*.ts",
        "pages/**/*.tsx", "utils/**/*.ts", "utils/**/*.tsx"
    ],
    "exclude": [".next", "coverage", "node_modules", "out"]
}
